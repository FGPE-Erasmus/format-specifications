{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "$id": "https://github.com/FGPE-Erasmus/format-specifications/blob/master/schemas/gedil.schema.json",
    "title": "Gamified Education Interoperability Language",
    "description": "JSON schema designed to describe gamification layers for educational contexts. Although designed to fulfil the specific requirements of gamification applied in programming courses, GEdIL is sufficiently generic to be applied to any other educational subjects as it only delineates a layer with the gamification elements that should lay on top of another layer describing activities.",
    "type": "object",
    "required": [
        "id",
        "name",
        "keywords",
        "status",
        "rules",
        "rewards",
        "leaderboards",
        "challenges"
    ],
    "properties": {
        "id": {
            "title": "ID",
            "description": "UUID of the gamification layer.",
            "type": "string"
        },
        "name": {
            "title": "Name",
            "description": "Name of the gamification layer.",
            "type": "string"
        },
        "description": {
            "title": "Description",
            "description": "Description of the gamification layer.",
            "type": "string"
        },
        "keywords": {
            "title": "Keywords",
            "description": "Keywords of the gamification layer.",
            "type": "array",
            "items": {
                "maxLength": 255,
                "type": "string"
            }
        },
        "status": {
            "title": "Status",
            "description": "Status of the gamification layer.",
            "type": "string",
            "enum": [
                "DRAFT",
                "PUBLISHED",
                "UNPUBLISHED",
                "TRASH"
            ],
            "default": "DRAFT"
        },
        "rules": {
            "title": "Rules",
            "description": "Set of rules on the top-level.",
            "type": "array",
            "items": {
                "$ref": "#/definitions/Rule"
            },
            "default": []
        },
        "rewards": {
            "title": "Rewards",
            "description": "Set of rewards given on the top-level.",
            "type": "array",
            "items": {
                "$ref": "#/definitions/Reward"
            },
            "default": []
        },
        "leaderboards": {
            "title": "Leaderboards",
            "description": "Set of leaderboards on the top-level.",
            "type": "array",
            "items": {
                "$ref": "#/definitions/Leaderboard"
            },
            "default": []
        },
        "challenges": {
            "title": "Challenges",
            "description": "Set of top-level challenges.",
            "type": "array",
            "items": {
                "$ref": "#/definitions/Challenge"
            },
            "default": []
        }
    },
    "definitions": {
        "AnyResource": {
            "title": "Any Resource",
            "description": "Reference to a challenge or a non-gamified exercise.",
            "type": "object",
            "properties": {
                "type": {
                    "title": "Type",
                    "description": "Type of referred resource.",
                    "enum": ["CHALLENGE", "EXERCISE"],
                    "type": "string"
                },
                "reference": {
                    "title": "Reference",
                    "description": "Reference to resource.",
                    "type": "string"
                }
            },
            "required": ["type", "reference"]
        },
        "Challenge": {
            "title": "Challenge",
            "description": "Schema for describing a challenge in a gamified programming course.",
            "type": "object",
            "properties": {
                "id": {
                    "title": "ID",
                    "description": "UUID of the challenge.",
                    "type": "string"
                },
                "name": {
                    "title": "Name",
                    "description": "Name of the challenge.",
                    "type": "string"
                },
                "description": {
                    "title": "Description",
                    "description": "Description of the challenge.",
                    "type": "string"
                },
                "refs": {
                    "title": "References",
                    "description": "Reference to non-gamified exercises of this challenge.",
                    "type": "array",
                    "items": {
                        "type": "string"
                    }
                },
                "mode": {
                    "title": "Mode",
                    "description": "The mode in which the programming exercise should be solved.",
                    "type": "string",
                    "enum": ["NORMAL", "SHAPESHIFTER", "SHORTENING", "SPEEDUP", "HACK_IT", "TIME_BOMB", "DUEL"],
                    "default": "NORMAL"
                },
                "mode_parameters": {
                    "title": "Mode Parameters",
                    "description": "Parameters to adjust the challenge according to the mode (e.g., threshold number of lines, threshold execution time, or time of the bomb).",
                    "type": "array",
                    "items": {
                        "type": "string"
                    }
                },
                "locked": {
                    "title": "Locked",
                    "description": "Is challenge initially locked?",
                    "type": "boolean",
                    "default": false
                },
                "hidden": {
                    "title": "Hidden",
                    "description": "Is challenge initially hidden?",
                    "type": "boolean",
                    "default": false
                },
                "difficulty": {
                    "title": "Difficulty",
                    "description": "Difficulty of the challenge.",
                    "type": "string",
                    "enum": [
                        "BEGINNER",
                        "EASY",
                        "AVERAGE",
                        "HARD",
                        "MASTER"
                    ]
                },
                "feedback_generators": {
                    "title": "Feedback Generators",
                    "description": "External programs that generate the feedback to give to the student when the challenge is complete.",
                    "type": "array",
                    "items": {
                        "title": "Feedback Generator",
                        "description": "A command line refering to an executable program to generate feedback of the challenge to attempts.",
                        "type": "object",
                        "properties": {
                            "pathname": {
                                "title": "Pathname",
                                "description": "Path to executable program.",
                                "type": "string"
                            },
                            "commandLine": {
                                "title": "Command Line",
                                "description": "The command line to run this executable.",
                                "type": "string"
                            }
                        },
                        "required": [
                            "pathname",
                            "commandLine"
                        ]
                    },
                    "default": []
                },
                "rules": {
                    "title": "Rules",
                    "description": "Set of rules on the challenge-level.",
                    "type": "array",
                    "items": {
                        "$ref": "#/definitions/Rule"
                    },
                    "default": []
                },
                "rewards": {
                    "title": "Rewards",
                    "description": "Set of rewards given on the challenge-level.",
                    "type": "array",
                    "items": {
                        "$ref": "#/definitions/Reward"
                    },
                    "default": []
                },
                "leaderboards": {
                    "title": "Leaderboards",
                    "description": "Set of leaderboards in the challenge.",
                    "type": "array",
                    "items": {
                        "$ref": "#/definitions/Leaderboard"
                    },
                    "default": []
                },
                "children": {
                    "title": "Children",
                    "description": "Sub-challenges of this challenge.",
                    "type": "array",
                    "items": {
                        "$ref": "#/definitions/Challenge"
                    },
                    "default": []
                }
            },
            "required": [
                "id",
                "name",
                "refs",
                "mode",
                "locked",
                "hidden",
                "difficulty",
                "rules",
                "rewards",
                "leaderboards",
                "children"
            ]
        },
        "Reward": {
            "title": "Reward",
            "description": "Reward to be given to users who achieves a certain goal.",
            "type": "object",
            "properties": {
                "id": {
                    "title": "ID",
                    "description": "UUID of the reward.",
                    "type": "string"
                },
                "name": {
                    "title": "Name",
                    "description": "Name of the reward.",
                    "type": "string"
                },
                "description": {
                    "title": "Description",
                    "description": "Description of the reward.",
                    "type": "string"
                },
                "kind": {
                    "title": "Kind",
                    "description": "Type of reward.",
                    "type": "string",
                    "enum": [
                        "POINT", "BADGE", "VIRTUAL_ITEM", "COUPON", "REVEAL", "UNLOCK", "HINT", "MESSAGE"
                    ]
                },
                "amount": {
                    "title": "Amount",
                    "description": "Quantity of the reward (if applicable).",
                    "type": "number"
                },
                "unlockables": {
                    "title": "Unlockables",
                    "description": "List of resources that get unlocked (if applicable).",
                    "type": "array",
                    "items": {
                        "title": "Unlockable",
                        "description": "A challenge or exercise that gets unlocked.",
                        "type": "object",
                        "properties": {
                            "id": {
                                "title": "ID",
                                "description": "UUID of the unlockable.",
                                "type": "string"
                            },
                            "type": {
                                "title": "Type",
                                "description": "Type of the unlockable.",
                                "enum": [
                                    "EXERCISE",
                                    "CHALLENGE"
                                ]
                            }
                        }
                    }
                },
                "revealables": {
                    "title": "Revealables",
                    "description": "List of resources that get revealed (if applicable).",
                    "type": "array",
                    "items": {
                        "title": "Revealable",
                        "description": "A challenge or exercise that gets revealed.",
                        "type": "object",
                        "properties": {
                            "id": {
                                "title": "ID",
                                "description": "UUID of the revealable.",
                                "type": "string"
                            },
                            "type": {
                                "title": "Type",
                                "description": "Type of the revealable.",
                                "enum": [
                                    "EXERCISE",
                                    "CHALLENGE"
                                ]
                            }
                        }
                    }
                },
                "hints": {
                    "title": "Hints",
                    "description": "Messages that help solving the challenge (if applicable).",
                    "type": "array",
                    "items": {
                        "title": "Hint",
                        "description": "A message that helps solving the challenge.",
                        "type": "string"
                    }
                },
                "congratulations": {
                    "title": "Congratulations",
                    "description": "Messages to congratulate the user (if applicable).",
                    "type": "array",
                    "items": {
                        "title": "Congratulation",
                        "description": "A message to congratulate the user.",
                        "type": "string"
                    }
                },
                "criteria": {
                    "title": "Criteria",
                    "description": "Criteria to obtain this reward.",
                    "$ref": "#/definitions/Criteria"
                }
            },
            "required": [
                "id", "name", "kind"
            ]
        },
        "Rule": {
            "title": "Rule",
            "description": "A rule consists of executing actions if a certain criteria is met",
            "type": "object",
            "properties": {
                "id": {
                    "title": "ID",
                    "description": "UUID of the rule.",
                    "type": "string"
                },
                "name": {
                    "title": "Name",
                    "description": "Name of the rule.",
                    "type": "string"
                },
                "criteria": {
                    "title": "Criteria",
                    "description": "Criteria for executing actions.",
                    "$ref": "#/definitions/Criteria"
                },
                "actions": {
                    "title": "Actions",
                    "description": "Actions to execute (GIVE, TAKE, UPDATE, ...). Depending on the action, the parameters can be set.",
                    "type": "array",
                    "items": {
                        "title": "Action",
                        "description": "Action to execute if criteria is met.",
                        "type": "object",
                        "properties": {
                            "type": {
                                "title": "Type",
                                "description": "Type of action",
                                "type": "string",
                                "enum": [
                                    "GIVE", "TAKE", "UPDATE"
                                ]
                            },
                            "parameters": {
                                "title": "Parameters",
                                "description": "Parameters of the action",
                                "type": "array",
                                "items": {
                                    "type": "string"
                                },
                                "default": []
                            }
                        },
                        "required": ["type", "parameters"]
                    }
                }
            },
            "required": ["id", "name", "criteria", "actions"]
        },
        "Criteria": {
            "title": "Criteria",
            "description": "A set of conditions joined with AND/OR.",
            "type": "object",
            "properties": {
                "id": {
                    "title": "ID",
                    "description": "UUID of the criteria.",
                    "type": "string"
                },
                "conditions": {
                    "title": "Conditions",
                    "description": "List of separate conditions.",
                    "type": "array",
                    "items": {
                        "title": "Condition",
                        "description": "A condition opposes two values with a comparing function (>,<,!=, ... for numeric props or starts_with, matches, ... for non-numeric).",
                        "type": "object",
                        "properties": {
                            "left_entity": {
                                "title": "Left Entity",
                                "description": "Type of entity on the left hand-side of the comparison.",
                                "type": "string",
                                "enum": ["FIXED", "EVENT", "ACTION", "PLAYER", "ENVIRONMENT"]
                            },
                            "left_property": {
                                "title": "Left Property",
                                "description": "Property of the entity to compare on the left hand-side of the comparison.",
                                "type": "string"
                            },
                            "comparing_function": {
                                "title": "Comparing Function",
                                "description": "",
                                "type": "string",
                                "enum": [
                                    "LESS_THAN", "GREATER_THAN", "LESS_OR_EQUAL", "GREAT_OR_EQUAL", "EQUAL", "NOT_EQUAL",
                                    "STARTS_WITH", "MATCHES", "NOT_MATCHES", "IS_EMPTY", "NOT_EMPTY",
                                    "IN", "NOT_IN"
                                ]
                            },
                            "right_entity": {
                                "title": "Right Entity",
                                "description": "Type of entity on the right hand-side of the comparison.",
                                "type": "string",
                                "enum": ["FIXED", "EVENT", "ACTION", "PLAYER", "ENVIRONMENT"]
                            },
                            "right_property": {
                                "title": "Right Property",
                                "description": "Property of the entity to compare on the right hand-side of the comparison.",
                                "type": "string"
                            }
                        },
                        "required": ["left_entity", "left_property", "comparing_function"]
                    },
                    "minItems": 1
                },
                "junctors": {
                    "title": "Junctors",
                    "description": "List with |conditions| - 1 joiners (i.e., either AND or OR).",
                    "type": "array",
                    "items": {
                        "type": "string",
                        "enum": ["AND", "OR"]
                    },
                    "default": []
                }
            },
            "required": ["id", "conditions", "junctors"]
        },
        "Leaderboard": {
            "title": "Leaderboard",
            "description": "A ranking of the players according to certain metrics.",
            "type": "object",
            "properties": {
                "id": {
                    "title": "ID",
                    "description": "UUID of the leaderboard.",
                    "type": "string"
                },
                "name": {
                    "title": "Name",
                    "description": "Name of the leaderboard.",
                    "type": "string"
                },
                "metrics": {
                    "title": "Metrics",
                    "description": "Metrics considered in this leaderboard, sorted by importance.",
                    "type": "array",
                    "items": {
                        "title": "Metric",
                        "description": "A metric to sort the leaderboard by.",
                        "type": "string"
                    },
                    "minItems": 1
                },
                "sorting_orders": {
                    "title": "Sorting Orders",
                    "description": "List with |metrics| elements, consisting of the sort direction (ASC or DESC).",
                    "type": "array",
                    "items": {
                        "title": "Sorting Order",
                        "description": "Sort direction (ASC or DESC).",
                        "type": "string",
                        "enum": ["ASC", "DESC"]
                    },
                    "minItems": 1
                }
            },
            "required": ["id", "metrics", "sorting_orders"]
        }
    }
}